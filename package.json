{
  "name": "pidraw",
  "version": "0.2.19",
  "description": "A drawing library for teacher :)",
  "type": "module",
  "main": "dist/pidraw.js",
  "module": "dist/pidraw.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/pidraw.js",
      "require": "./dist/pidraw.js"
    }
  },
  "./types/index.d.ts": "./types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "test": "vitest",
    "dev": "vite",
    "build": "tsc --p ./tsconfig-build.json && vite build",
    "preview": "vite preview",
    "dependency-cruise": "dependency-cruise -T dot -x node_modules -v -- src/index.ts  | dot -T svg > dependencies.svg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/basilgass/PiDraw.git"
  },
  "keywords": [
    "math",
    "drawing",
    "geometry",
    "plot"
  ],
  "author": "Basil Gass",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/basilgass/PiDraw/issues"
  },
  "homepage": "https://github.com/basilgass/PiDraw#readme",
  "dependencies": {
    "@svgdotjs/svg.draggable.js": "^3.0.6",
    "@svgdotjs/svg.js": "^3.2.5",
    "piparser": "^0.1.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "katex": "^0.16.27",
    "@types/eslint": "^8.42.3",
    "@tailwindcss/vite": "^4.1.13",
    "@types/glob": "^8.1.0",
    "autoprefixer": "^10.4.23",
    "dependency-cruiser": "^17.3.6",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^17.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.17"
  }
}
